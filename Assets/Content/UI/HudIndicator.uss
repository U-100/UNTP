    background-image: url('project://database/Assets/Content/UI/Icons/play-button.svg?fileID=7388822144124034973&guid=9f0f056ae9f8d1849930ff1834fad076&type=3#play-button');
    rotate: -90deg;
    top: -100px;
    -unity-background-image-tint-color: rgb(255, 0, 0);
}

